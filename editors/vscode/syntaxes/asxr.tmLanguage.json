{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ASXR",
  "scopeName": "source.asxr",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#blocks" },
    { "include": "#references" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.asxr",
          "match": "//.*$"
        },
        {
          "name": "comment.block.asxr",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.asxr",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.asxr",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.asxr",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.asxr",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.asxr",
          "match": "\\b-?\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.asxr",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.asxr",
          "match": "@(if|else|for|while|do|switch|case|default|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.asxr",
          "match": "@(atomic|dom|component|state|reactor|timer)\\b"
        },
        {
          "name": "keyword.directive.asxr",
          "match": "@(use|plugin|plugins|resolve|transform|compile|pipe)\\b"
        },
        {
          "name": "keyword.operation.asxr",
          "match": "@(propose|constrain|server)\\b"
        },
        {
          "name": "constant.language.asxr",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "storage.type.asxr",
          "match": "\\b(prop|on|ref|style|class|children|version|syntax|handlers|conflicts)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "entity.name.type.block.asxr",
          "match": "@(atomic|dom|component|state|reactor|plugin)\\s*\\[([\\w-]+)\\]",
          "captures": {
            "1": { "name": "keyword.declaration.asxr" },
            "2": { "name": "entity.name.tag.asxr" }
          }
        },
        {
          "name": "entity.name.tag.html.asxr",
          "match": "\\b(div|span|p|a|button|input|form|label|ul|ol|li|table|tr|td|th|h[1-6]|header|footer|nav|section|article|aside|main|img|video|audio|canvas|svg|iframe|textarea|select|option)\\b"
        }
      ]
    },
    "references": {
      "patterns": [
        {
          "name": "variable.other.reference.block.asxr",
          "match": "#[\\w-]+"
        },
        {
          "name": "variable.other.reference.state.asxr",
          "begin": "\\{\\{",
          "end": "\\}\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.interpolation.begin.asxr" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.interpolation.end.asxr" }
          },
          "patterns": [
            {
              "name": "variable.other.property.asxr",
              "match": "[\\w.]+"
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.asxr",
          "match": "(===?|!==?|<=?|>=?)"
        },
        {
          "name": "keyword.operator.logical.asxr",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.asxr",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.asxr",
          "match": "=>"
        },
        {
          "name": "keyword.operator.arrow.asxr",
          "match": "->"
        },
        {
          "name": "keyword.operator.spread.asxr",
          "match": "\\.\\.\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.asxr",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.bracket.asxr",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.paren.asxr",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.asxr",
          "match": "[,;:]"
        }
      ]
    }
  }
}
