{
  "name": "asxr-vscode",
  "displayName": "ASXR Language Support",
  "description": "Language support for ASXR (Atomic Structure eXtension Runtime)",
  "version": "0.1.0",
  "publisher": "atomic-dom",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "asxr",
    "atomic-dom",
    "dom",
    "reactive"
  ],
  "activationEvents": [
    "onLanguage:asxr"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "asxr",
        "aliases": [
          "ASXR",
          "asxr"
        ],
        "extensions": [
          ".asxr"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/asxr-light.svg",
          "dark": "./icons/asxr-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "asxr",
        "scopeName": "source.asxr",
        "path": "./syntaxes/asxr.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "asxr",
        "path": "./snippets/asxr.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ASXR",
      "properties": {
        "asxr.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the ASXR language server executable. Leave empty to use bundled server."
        },
        "asxr.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "asxr.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable validation."
        },
        "asxr.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable code completion."
        }
      }
    },
    "commands": [
      {
        "command": "asxr.restartServer",
        "title": "ASXR: Restart Language Server"
      },
      {
        "command": "asxr.showOutputChannel",
        "title": "ASXR: Show Output Channel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cannaseedus-bot/ATOMIC-DOM"
  },
  "license": "MIT"
}
