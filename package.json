{
  "name": "atomic-dom",
  "version": "0.1.0",
  "description": "ASXR language parser and compiler for atomic DOM operations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "asxr": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./compiler": {
      "types": "./dist/compiler/index.d.ts",
      "import": "./dist/compiler/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "node dist/parser/parser.test.js",
    "dev": "tsc --watch"
  },
  "keywords": [
    "dom",
    "atomic",
    "parser",
    "compiler",
    "asxr"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
